/*
recordBeaconActivities
 */
{
	"passphrase" : "<passphrase>",
	"data": {
		"activities" : [{
			"beacon" : {
				"uuid" : "<uuid of the beacon>",
				"major" : "<major value of the beacon>",
				"minor" : "<minor value of the beacon>"
			},
			"action" : "<possible values are enter or exit>",
			"timestamp" : <value of NSTimeInterval today = [[NSDate date] timeIntervalSince1970] as int>,
			"devicetoken" : "<UDID of the device>"
		}]
	}
}

